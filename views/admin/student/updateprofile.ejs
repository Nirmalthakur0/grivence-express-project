<%-include('../layouts/header.ejs') %>

  <%-include('../layouts/sidebar.ejs') %>


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" >

      <!-- Main content -->
      <div class="content" >

        <!-- /.card -->

        <div class="card">
          <div class="card-header d-flex justify-content-between" style="background-color: rgb(34, 32, 32); color: white;">
            <h2 class="card-title" style="line-height: 40px; font-family: monospace; font-weight: 600;font-size: 18px; "> CHANGE PROFILE</h2>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <!--modal start-->
        
                  <form action="/profileupdate" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label>Name</label>
                      <input type="text" value="<%= n %>"  name="name" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Email</label>
                      <input type="email"  value="<%= e %>"  name="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label> Phone</label>
                      <input type="number" value="<%= p %> "  name="phone" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label> City</label>
                        <input type="text"   value="<%= c %>" name="city" class="form-control" required>
                      </div>
                      <div class="form-group">
                        <label> Address</label>
                        <input type="text"   value="<%= a %>" name="address" class="form-control" required>
                      </div>
                      <div class="form-group">
                        <label>Image</label>
                        <input type="file" value="<%= img.url %>" name="image" class="form-control" required>
                      </div>
                      <img src="<%= img.url %>" alt="" width="70" height="70" style="border-radius: 50%;"> <br> <br>
  
                    <button type="submit" class="btn btn-success">update Profile</button>
                  </form>

          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


